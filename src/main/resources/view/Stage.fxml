    <scene>
        <Scene fx:id="scene">
            <AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="400.0">
            <children>
               <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="565.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               <TextField fx:id="input" prefHeight="25.0" prefWidth="335.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" />
               <Button fx:id="sendButton" mnemonicParsing="false" prefWidth="50.0" text="Send" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" />
            </children></AnchorPane>
        </Scene>
    </scene>
</fx:root>
